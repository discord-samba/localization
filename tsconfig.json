{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "lib": ["es2017"],
        "sourceMap": true,
        "declaration": true,
        "removeComments": false,
        "experimentalDecorators": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "skipLibCheck": true
    },
    "include": [
		"src/**/*.ts",
		"src/**/*.test.ts",
		"./gulpfile.js"
	],
    "exclude": [
        "**/node_modules",
        "**/bin"
	],
	"typedocOptions": {
		"mode": "file",
		"module": "commonjs",
		"theme": "@discord-sambo/typedoc-default-theme/src/minimal",
		"exclude": "./**/+(node_modules|__test__|)/**/*.ts",
		"out": "../docs",
		"links": [{
			"label": "Logger",
			"url": "https://discord-sambo.github.io/logger"
		}]
	}
}
