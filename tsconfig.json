{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "lib": ["es2017"],
        "sourceMap": true,
        "declaration": true,
        "removeComments": false,
        "experimentalDecorators": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
		"skipLibCheck": true,
		"stripInternal": true,
		"rootDir": "./src",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
		}
	},
    "include": [
		"src/**/*.ts",
		"src/**/*.test.ts",
		"scripts/**/*",
		"gulpfile.js",
	],
    "exclude": [
        "**/node_modules",
        "**/bin"
	]
}
